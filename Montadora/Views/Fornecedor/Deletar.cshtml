@model Montadora.Models.Fornecedor
@{
    ViewBag.Title = "Excluir Fornecedor";
}
<h2>Você deseja realmente excluir o Fornecedor: @Model.Nome ? </h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(id => id.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome): @Model.Nome
    </div>
    <div>
        @Html.LabelFor(model => model.Endereco): @Model.Endereco
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Cpf): @Model.Cpf
    </div>
    <div class="form-group">
        <div class="col-md-offset-1">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Cancelar", "Listar", "", new { @class = "btn btn-primary" })
        </div>
    </div>
}
@model Montadora.Models.Montador
@{
    ViewBag.Title = "Editar Montador";
}
<h2>Editar Montador</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(id => id.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Cpf)
        @Html.EditorFor(model => model.Cpf, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Salario)
        @Html.EditorFor(model => model.Salario, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-1">
            <input type="submit" value="Salvar" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Listar", "", new { @class = "btn btn-default" })
        </div>
    </div>
}


@model Montadora.Models.Cidade
@{
    ViewBag.Title = "Editar Cidade";
}
<h2>Editar Cidade</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(id => id.CidadeId)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control"}})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Estado)
        @Html.EnumDropDownListFor(model => model.Estado, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-1">
            <input type="submit" value="Salvar" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Listar", "", new { @class = "btn btn-default" })
        </div>
    </div>
}


@model Montadora.Models.Cidade
@{
    ViewBag.Title = "Excluir Cidade";
}
<h2>Você deseja realmente excluir a cidade @Model.Nome ? </h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(id => id.CidadeId)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome): @Model.Nome
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Estado): @Model.Estado
    </div>
    <div class="form-group">
        <div class="col-md-offset-1">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Cancelar", "Listar", "", new { @class = "btn btn-primary" })
        </div>
    </div>
}